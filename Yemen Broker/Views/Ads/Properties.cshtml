@model IEnumerable<Yemen_Broker.Models.Ad>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
   
</head>
<body>

    <div class="container">
        <img src="~/Content/images/Paner cover.jpg" style="width:1110px" />
    </div>
   
    <div id="menu">
        <ul>
            <li class="item">
                <a href="/Lands/index"><img src="~/Content/images/land.png" /><b>Lands</b></a>
            </li>

            <li class="item">
                <a href="/Homes/index"><img src="~/Content/images/Home.png" /><b>Home</b></a>
            </li>

            <li class="item">
                <a href="/Warehouses/index"><img src="~/Content/images/wharehouse.png" /><b>Warehouse</b></a>
            </li>
            <li class="item">
                <a href="/Shops/index"><img src="~/Content/images/shop.png" /><b>Shop</b></a>
            </li>
            <li class="item">
                <a href="/Apartments/index"><img src="~/Content/images/Appartment.png" /><b>Apartment</b></a>
            </li>
        </ul>
    </div>
    <style>
        #menu {
            margin-bottom: 30px;
        }

            #menu ul {
                list-style-type: none;
                margin-bottom: 15px;
                padding: 10px 0 0 0;
                width: 100%;
                background-color: #ffffff;
                text-align: left;
            }

                #menu ul li {
                    display: inline;
                    color: #000;
                    padding: 8px 16px;
                    text-decoration: none;
                    height: 50px;
                }

                    #menu ul li a b {
                        margin-left: -10px;
                        padding-top: 50px;
                        color: #000;
                    }

                    #menu ul li a img {
                        height: 80px;
                    }

            #menu li a.active {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            }

            #menu li a:hover:not(.active) {
                background-color: #ffecec;
                color: #b40408;
                padding: 30px 8px 30px 1px;
                border: 1px solid #b40408;
                text-decoration: none;
            }
    </style>
    <!--star All catogre show-->
    @{
        var apartments = Model.Where(ad => ad.Discriminator == Yemen_Broker.ViewModels.DiscriminatorOptions.Apartment).Take(4);
        var lands = Model.Where(ad => ad.Discriminator == Yemen_Broker.ViewModels.DiscriminatorOptions.Land).Take(4);
        var shops = Model.Where(ad => ad.Discriminator == Yemen_Broker.ViewModels.DiscriminatorOptions.Shop).Take(4);
        var homes = Model.Where(ad => ad.Discriminator == Yemen_Broker.ViewModels.DiscriminatorOptions.Home).Take(4);
        var warehouses = Model.Where(ad => ad.Discriminator == Yemen_Broker.ViewModels.DiscriminatorOptions.Warehouse).Take(4);

        <div class="container" id="div1">



            <h2>Apartments</h2>
            <ul>
                @foreach (var item in apartments)
                {
                    <li><a href="#"><img src="/Uploads/@Html.DisplayFor(model => item.Pictures.FirstOrDefault().PictureURL)" /></a><div id="divprice"><img src="~/Content/images/price.png" /><h5 id="ne"><b>$@item.AdPrice</b></h5></div></li>
                }

                <li>
                    <a href="~/Apartments">
                        <button type="button">Show All</button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="container" id="div1">



            <h2>Shops</h2>
            <ul>
                @foreach (var item in shops)
                {
                    <li><a href="#"><img src="/Uploads/@Html.DisplayFor(model => item.Pictures.FirstOrDefault().PictureURL)" /></a><div id="divprice"><img src="~/Content/images/price.png" /><h5 id="ne"><b>$@item.AdPrice</b></h5></div></li>
                }

                <li>
                    <a href="~/Shops">
                        <button type="button">Show All</button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="container" id="div1">



            <h2>Homes</h2>
            <ul>
                @foreach (var item in homes)
                {
                    <li><a href="#"><img src="/Uploads/@Html.DisplayFor(model => item.Pictures.FirstOrDefault().PictureURL)" /></a><div id="divprice"><img src="~/Content/images/price.png" /><h5 id="ne"><b>$@item.AdPrice</b></h5></div></li>
                }

                <li>
                    <a href="~/Homes">
                        <button type="button">Show All</button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="container" id="div1">
            <h2>Lands</h2>
            <ul>
                @foreach (var item in lands)
                {
                    <li><a href="#">  <img src="/Uploads/@Html.DisplayFor(model => item.Pictures.FirstOrDefault().PictureURL)" /></a><div id="divprice"><img src="~/Content/images/price.png" /><h5 id="ne"><b>$@item.AdPrice</b></h5></div></li>
                }
                <li>
                    <a href="~/Lands">
                        <button type="button">Show All</button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="container" id="div1">
            <h2>Warehouses</h2>
            <ul>
                @foreach (var item in warehouses)
                {
                    <li><a href="#">  <img src="/Uploads/@Html.DisplayFor(model => item.Pictures.FirstOrDefault().PictureURL)" /></a><div id="divprice"><img src="~/Content/images/price.png" /><h5 id="ne"><b>$@item.AdPrice</b></h5></div></li>
                }
                <li>
                    <a href="~/Warehouses">
                        <button type="button">Show All</button>
                    </a>
                </li>
            </ul>
        </div>
    }
    <style>
        #div1 ul {
            list-style-type: none;
            margin: 10px 0 0 0;
            width: 100%;
            background-color: #ffffff;
            text-align: left;
        }

            #div1 ul li {
                display: inline;
                color: #000;
                margin: 15px 0 20px -40px;
                text-decoration: none;
            }

                #div1 ul li #divprice {
                    display: inline;
                    margin: 40px 0 0 -255px;
                    position: absolute;
                }

                    #div1 ul li #divprice #ne {
                        height: 25px;
                        width: 100px;
                        color: red;
                        margin: -18px 0 0 5px;
                    }

                #div1 ul li div img {
                    height: 25px;
                    width: 100px;
                    margin: -5px 0 0 5px;
                }

                #div1 ul li a img {
                    height: 130px;
                    width: 200px;
                    border: solid 1px rgba(0, 0, 0, 0.2);
                    margin-right: 50px;
                }

                #div1 ul li a button {
                    height: 130px;
                    width: 200px;
                    border: solid 1px rgba(0, 0, 0, 0.2);
                    margin-left: 40px;
                    background-color: #73b21d;
                    color: white;
                }

                    #div1 ul li a button:hover {
                        border: solid 1px rgba(0, 0, 0, 0.2);
                        background-color: green;
                        color: white;
                    }

        #div1 li img.active {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        #div1 li img:hover:not(.active) {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
    </style>
    <!--end All catogre show-->

</body>
</html>

