@model IEnumerable<Yemen_Broker.Models.Ad>
@{
    ViewBag.Title = "Home Page";
}
<!-- Slider -->

<body onload="show();">
    <div style="width:100%;">
        <div class="col-md-4 float-left" style=" border: 2px solid rgba(0, 0, 0, 0.2);padding: 10px;border-radius: 25px;margin-top:5px;">
            <div>
                <h1> Ads Faster & </h1>
                <h1>Find Great Deals</h1>

                <div style="float:left;text-align:center;">
                    <button type="button" class="btn btn-warning" style="height:50px; width:100px;">Post Ad now</button>
                    <h6>Snap it. Post it. Make RM</h6>
                </div>
                <div style="float:right;text-align:center;">
                    <button type="button" class="btn btn-primary" style="height:50px; width:100px;">Find Ad now</button>
                    <h6>1 M+ Fresh Offers</h6>
                </div>
            </div>
        </div>
        <div class="container col-md-8 float-right">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" style="height:250px;border: 2px solid rgba(0, 0, 0, 0.2);border-radius: 25px;">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" style="background-color:#f1f1f1">
                    <div class="item active">
                        <img src="~/Content/images/slide/slide1.png" alt="Propertes" style="width:100%;height:250px;">
                    </div>

                    <div class="item">
                        <img src="~/Content/images/slide/slide2.png" alt="Cars" style="width:100%;height:250px;">
                    </div>

                    <div class="item">
                        <img src="~/Content/images/slide/slide3.png" alt="computers" style="width:100%;height:250px;">
                    </div>
                    <div class="item">
                        <img src="~/Content/images/slide/slide4.png" alt="Mobiles" style="width:100%;height:250px;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="border: 2px 0 0 2px solid rgba(0, 0, 0, 0.2);border-radius: 25px;">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next" style="border: 2px 2px 0 0 solid rgba(0, 0, 0, 0.2);border-radius: 25px;">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <!-- star Navigation menue-->
    <div style="margin-top:100px;">

        <h1> <br /></h1>
        <h2>Browse Categories:</h2>
        <p>From Cars to Properties, Mobile phones and many more..</p>
        <div id="menu">

            <ul>
                <li class="item">
                    <a href="/Ads/Properties">  <img src="~/Content/images/Property.png" alt="Propertes"></a>
                </li>

                <li class="item">
                    <a href="~/Cars">  <img src="~/Content/images/Cars.png" alt="Cars"></a>
                </li>

                <li class="item">
                    <a href="~/Computers">  <img src="~/Content/images/Computers.png" alt="Mobiles"></a>
                </li>
                <li class="item">
                    <a href="~/Mobiles"> <img src="~/Content/images/Mobiles.png" alt="computers"></a>
                </li>
                <li class="item">
                    <a href="~/Ads">   <img src="~/Content/images/Others.png" alt="Others"></a>
                </li>
                <li class="item">
                    <a href="~/Orders"> <img src="~/Content/images/Orders.png" alt="Orders"></a>
                </li>
            </ul>
        </div>
        <style>
            #menu ul {
                list-style-type: none;
                margin-top: 10px;
                margin-bottom: 15px;
                padding: 10px 0 0 0;
                width: 100%;
                background-color: #ffffff;
                text-align: left;
            }

                #menu ul li {
                    display: inline;
                    color: #000;
                    padding: 8px 16px;
                    text-decoration: none;
                    height: 50px;
                }

                    #menu ul li a img {
                        height: 90px;
                    }

            #menu li img.active {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            }

            #menu li img:hover:not(.active) {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            }
        </style>
    </div>
    <!-- end Navigation menue-->
