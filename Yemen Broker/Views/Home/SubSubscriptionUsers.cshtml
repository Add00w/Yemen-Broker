@model IEnumerable<Yemen_Broker.Models.User>
@using Microsoft.AspNet.Identity;

@{
    Layout = null;
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Report</title>


    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Content/bootstrap4-offline/javascript.js"></script>
    <script src="~/Content/bootstrap4-offline/jquery.js"></script>


</head>
<div class="container">
    @*header*@
    <div class="row" style="border-bottom:1px double #000000">

        <div class="col-sm-8">
            <a href="/Home">
                <img src="~/Content/images/logoYB.png" alt="YB Logo." />
            </a>
        </div>
        <div class="col-sm-4" style="margin-top:15px;">
            <h4><b>@User.Identity.GetUserName()</b></h4>
            <h4>@DateTime.Now</h4>
        </div>
        <hr />
    </div>
    <div class="row">
        <div class="col col-lg-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Subscription Id
                        </th>
                        <th>
                            Address
                        </th>

                        <th>
                            User Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Actions
                        </th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.SubscriptionId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.ActionLink("More report", "IndividualUserReport", new { id = item.Id }, new { @class = "btn btn-success" })
                            </td>
                        </tr>
                    }

                </tbody>
                @*@Html.ActionLink("More report", "IndividualUserReport", new { @class = "btn btn-success" }) |*@

            </table>

        </div>
    </div>
</div>