    <a href="/Ads/Create" style="float:right;margin-top:-50px;margin-bottom:10px"> <img src="~/Content/images/Add Advetrise.png" /></a>
    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="background-color:white;padding:5px 10px 5px 10px;margin-top:65px;margin-right:110px">

        <a href="#" id="uname">
            <img src="~/Content/images/Lpgin.png" style="width:20px; height:20px;" /> <b>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                .


            </b><i class="glyphicon glyphicon-chevron-right" style="float:right;"></i><br />
            <h6 style="padding-left: 23px;margin:-3px 0;">@Session["subscriptionType"]</h6>
        </a><hr />
