        {
            <a href="~/Ads/ManageAds" id="uname"><i class="glyphicon glyphicon-dashboard" style="width:20px; height:20px;"></i> <b>Manage Ads. </b></a><br />
            <a href="~/Users" id="uname"><i class="glyphicon glyphicon-dashboard" style="width:20px; height:20px;"></i> <b>Manage Users. </b></a><br />
            <a href="~/Orders/ManageOrders" id="uname"><i class="glyphicon glyphicon-dashboard" style="width:20px; height:20px;"></i> <b>Manage Orders. </b></a><br /><hr />
            <a href="~/City" id="uname"><i class="glyphicon glyphicon-dashboard" style="width:20px; height:20px;"></i> <b>Manage Cities. </b></a><br /><hr />
            <a href="~/Manage/BackupAndRestore" id="uname"><i class="glyphicon glyphicon-save" style="width:20px; height:20px;"></i> <b>Backup and Restore. </b></a><br /><hr />
            
        }         
        <a href="~/Home/Report" id="uname"><i class="glyphicon glyphicon-stats" style="width:20px; height:20px;"></i> <b>Reports. </b></a><br /><hr />

        <a href="~/Messages" id="uname"><i class="glyphicon glyphicon-comment" style="width:20px; height:20px;"></i><div style="display:inline;background-color:red;color:white;border-radius:50px;margin-left:-10px;padding:1px;position:absolute;"><b>@Session["myChatsCount"]</b></div> <b>My chats.</b></a><br />
        <a href="~/Messages/Notifications" id="uname"><i class="glyphicon glyphicon-bell" style="width:20px; height:20px;"></i><div style="display:inline;background-color:red;color:white;border-radius:50px;margin-left:-10px;padding:1px;position:absolute;"><b>@Session["myNotificationsCount"]</b></div> <b>Notifications. </b></a><br /><hr />
        <a href="#" id="uname"><i class="glyphicon glyphicon-earphone" style="width:20px; height:20px;"></i> <b>Contact Us.</b></a><br />
        <a href="#" id="uname"><i class="glyphicon glyphicon-question-sign" style="width:20px; height:20px;"></i> <b>Help.</b></a><br />
        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
    </div>
    }
    <style>
        #uname {
            color: #808080;
        }

            #uname:hover {
                text-decoration: none;
                color: black;
            }
    </style>
</div>
   
