@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
   
<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background:none;height:50px;width:150px;float:left;color:black;">
        <img src="~/Content/images/Lpgin.png" style="width:22px; height:22px;" />
        <div style="display:inline;background-color:red;color:white;border-radius:50px;margin-left:-10px;padding:1px;position:absolute;"><b>@Session["totalCount"]</b></div>
